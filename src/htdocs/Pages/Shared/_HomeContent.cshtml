  <div class="overlay-backdrop" data-close></div>
  <div class="overlay-panel" role="dialog" aria-modal="true" aria-labelledby="overlayTitle">
    <button class="overlay-close" type="button" data-close aria-label="Cerrar">&times;</button>
    <h2 id="overlayTitle" class="overlay-title"></h2>
    <div id="overlayBody" class="overlay-body"></div>
  </div>
</div>

