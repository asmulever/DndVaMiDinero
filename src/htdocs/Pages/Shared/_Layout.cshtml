@{
    var title = ViewData["Title"] as string ?? "DndVaMiDinero";
    var description = ViewData["Description"] as string ?? "Calculadora de presupuesto mensual.";
}
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title</title>
    <meta name="description" content="@description" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Fraunces:wght@500;700&family=Space+Grotesk:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/assets/css/styles.css" />
    @RenderSection("Head", required: false)
  </head>
  <body>
    <div class="page">
      @RenderBody()
    </div>
  </body>
</html>
